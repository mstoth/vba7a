	</div>
<% end %>

<table class="center">
	<tr>
		<td>
			Zip Code: 
		</td>
		<td>
			<%= f.text_field :zip %>
		</td>
	</tr>
	<tr>
		<td>
			email: 
		</td>
		<td>
			<%= f.text_field :email %>
