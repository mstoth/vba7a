<%= form_for @user, :url => account_path do |f| %>
<% if @user.errors.any? %>
	<div id="error_explanation">
		<h2><%= pluralize(@user.errors.count, "error") %> prohibited this venue from being saved:</h2>

		<ul>
			<% @user.errors.full_messages.each do |msg| %>
