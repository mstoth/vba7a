  
  
<div class="form_heading"><br/><br/>Groups Near You</div>


<br/>
<table class="center" style="width:300px"><tr><td><div id="current_value"></div></td><td>
<div class="slidecontainer">
  <input type="range" min="1" max="100" value="50" class="slider" id="myRange">
</div>

	<%= form_tag '/users/groups_near_me', :method=>"get" do %>
	<input id="distance" type="text" name="distance" />
	Distance in Miles
	<input type="hidden", name="disthid", id="disthid", value=<%= @current_dist %>></input>
	<input type="submit", name="submit", value="Update"></input>
	<% end %>
		
	</td></tr></table>


<table class="center"><tr><td>
<ul>
<% @groups.each do |g| %>
	<li><%= link_to g.title,g %></li>
<% end %>
</ul>
</td></tr></table>
<% if @groups.length == 0 %>
	<div id="notes">
		There are no groups near you who are registered yet.  Contact performers you know nearby to get them to sign on. 
		</div>
<% end %>

<script>
var slider = document.getElementById('myRange');
slider.value = <%= @current_dist %>;
var txtin = document.getElementById('distance');
txtin.value = slider.value;
slider.oninput = function(){
	txtin.value = this.value;
}

txtin.onchange = function(){
	slider.value = this.value;
}

</script>