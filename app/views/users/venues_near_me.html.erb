<% @venues.each do |g| %>
	<li><%= link_to g.name,g %></li>
<% end %>
</ul>
</td></tr></table>
<% if @venues.length == 0 %>
	<div id="notes">
		There are no venues near you who are registered yet.  Contact places you know nearby to get them to sign on. 
		</div>
<% end %>

<script>
var slider = document.getElementById('myRange');
slider.value = <%= @current_dist %>;
var txtin = document.getElementById('distance');
txtin.value = slider.value;
slider.oninput = function(){
	txtin.value = this.value;
}

txtin.onchange = function(){
	slider.value = this.value;
}

</script>
