<p id="notice"><%= notice %></p>

<table class="center">
<thead>
<tr>
<th>Reviews</th>
</tr>
</thead>
  <thead>
    <tr>
      <th>Reviewer</th>
      <th>Title</th>
      <th>Stars</th>
      <th>Comment</th>
      <th>Concert</th>
      <th>Venue</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
      <% cid = review.concert_id %>
      <% vid = Concert.find(cid).venue_id %>
      <% uid = review.user_id %>

        <td><%= User.find(review.user_id).login %></td>
        <td><%= review.title %></td>
        <td><%= review.stars %></td>
        <td><%= review.comment %></td>
        <td><%= Concert.find(cid).title %></td>
        <td><%= Venue.find(vid).name %></td>
        <td><%= link_to 'Show', review %></td>
        <td><%= link_to 'Edit', edit_review_path(review) %></td>
        <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />
<div id="footerlinks">
<%= link_to 'New Review', new_review_path %>
</div>
