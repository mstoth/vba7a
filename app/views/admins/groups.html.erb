Groups
</div>


<table class="center">
  <tr>
    <th>ID</th>
        <th>Title</th>
	<th>Concerts</th>
    <th></th>
    <th></th>
  </tr>

  

  <% @groups.each do |u| %>
  <% cs = "" %>
  <% u.concerts.each do |c| %>
  <% cs = cs + c.id.to_s + "," %>
  <% end %>
  <% cs = cs.chop %>
  <tr>
    <td><%= u.id %></td>
        <td><%= u.title %></td>
	<td><%= cs %></td>
    <td><%= link_to 'Show', u %></td>
    <td><%= link_to "Delete", u, :method=>:delete, :confirm=>"Are you sure?", :remote=>:true, :class=>"alert" %>
  </tr>
<% end %>
</table>
