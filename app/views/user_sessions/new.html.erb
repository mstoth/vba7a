
<p id="notice"><%= notice %></p>
<div id="login_form">
<%= form_for @user_session, :url => user_sessions_path do |f| %>
<% if @user_session.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user_session.errors.count, "error") %> prohibited this concert from being saved:</h2>

    <ul>
    <% @user_session.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class="form_heading"><br/><br/>
Enter your login and password to sign in.
</div>

<br/>


<table class="center">
  <tr>
    <td align="right"><%= f.label 'Login: ' %></td>
    <td><%= f.text_field :login %></td>
  </tr>

  <tr>
    <td align="right"><%= f.label 'Password: ' %></td>
    <td><%= f.password_field :password %></td>
  </tr>

  <tr>
    <td align="right"><a href= "/login_resets/new" data-no-turbolink="true" >Forgot Login</a></td>
    <td align="left"><%= link_to "Forgot password", new_password_reset_path %></td>
  </tr>

<%= f.submit "SIGN IN" %>
</table>
</div>
<% end %>
