<p id="notice"><%= notice %></p>

<div class="form_heading">
  <br/><br/>Pieces
</div>



<table class="center">
  <thead>
    <tr>
      <th>Title</th>
      <th>Composer</th>
      <th>Recording</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pieces.each do |piece| %>
      <tr>
        <td><%= piece.title %></td>
        <td><%= piece.composer %></td>
        <td><%= link_to 'Link', piece.recording %></td>
        <td><%= link_to 'Show', piece %></td>
        <td><%= link_to 'Destroy', piece, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<br />
<div id="footerlinks">

  <%= link_to 'New Piece', new_piece_path %>
<br/>
 <% if !@concert.nil? %>
 <%= link_to 'Edit #{@concert.title}', edit_concert_path %>
 <% end %>
</div>
