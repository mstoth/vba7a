<tr><td>
    <%= f.submit %>
</td></tr>
</table>

<% end %>
<% if !@concerts.nil? %>
<div id="notes">
  <%= month_calendar(start_date_param: :date, events: @concerts) do |date,concerts| %>
  <%= date %>
  <% concerts.each do |concert| %>
  <div>
    <%= concert.title %>
  </div>
  <% end %>
  <% end %>
</div>
<% end %>
